<script>
    function changecolor() {
        var namecolor = document.getElementById("name");
        if(namecolor.style.color == "var(--accent)") {
            namecolor.style.color = "var(--accent2)";
            document.body.style.backgroundImage = "url('https://i.ibb.co/277qsNz/ezgif-com-gif-maker-1.gif')";
        }
        else if(namecolor.style.color = "var(--accent2)") {
            namecolor.style.color = "var(--accent)";
            document.body.style.backgroundImage = "url('https://i.ibb.co/gRNgMgp/t.gif')";
        }
    }
</script>

